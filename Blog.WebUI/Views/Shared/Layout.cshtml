@{
    Layout = null;
    string title = ViewBag.Title ?? "Blog";
    Blog.Repository.Models.UserModel user = ViewBag.User;
}

<head>
    <title name=""></title>
    <link href="~/bower_components/bootstrap/dist/css/slate.css" rel="stylesheet" type="text/css" />    
    <script src="~/bower_components/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
    @RenderSection("Header", false)
</head>

<body>
    <header>
        <div class="navbar navbar-default">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Blog</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <div class="col-md-3 col-lg-3">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search" name="srch-term" id="srch-term">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i>&nbsp</button>
                            </div>
                        </div>
                    </form>
                </div>
                @if (user == null)
                {
                    @Html.Partial("Bar/Login")
                }
                else
                {
                    @Html.Partial("Bar/User", HttpContext.Current.Session["user"])
                }
            </div>
        </div>
    </header>
    <div class="container">
        <article class="main col-xs-9">
            @RenderBody()
        </article>
        <aside class="sidebar col-xs-3">
            @{Html.RenderAction("Index", "Aside");}
        </aside>
    </div>
    <footer class="navbar navbar-bottom">
        <div class="container pull-right">
            Copyright © 2015 _monolith. 
            All Rights Reserved.
        </div>
    </footer>
</body>