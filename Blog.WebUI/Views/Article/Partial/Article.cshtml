@model Blog.Repository.Models.ArticleModel

@functions
{
    string GetShortContent()
    {
        return Model.Content.Substring(0, 250) + ((Model.Content.Length > 250) ? "..." : "");
    }
}
<article class="well">
    <h3>@Model.Title</h3>
    @Html.Raw(GetShortContent())
    <div class="pull-right">
        <strong>@Model.Author</strong> <small>@Model.CreateDate.ToString("MMMM dd, yyyy.", System.Globalization.CultureInfo.CreateSpecificCulture("en-US"))</small>
    </div>      
    <a href="@Url.Action("Article", "Article", new { url = Model.Url })" class="btn btn-link">More &rarr;</a>
</article>

