@model Blog.WebUI.Models.RegisterModel

@{
    Layout = null;
    ViewBag.Title = "Blog Register";
}
<head>
    <title>@ViewBag.Title</title>
    <link href="~/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bower_components/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading text-center">
                        <h3 class="panel-title">Register</h3>
                    </div>
                    <div class="panel-body">
                        <fieldset>
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.Username)
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", @required = "reqiured", @placeholder = "Username" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.Email)
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @type = "email", @required = "reqiured", @placeholder = "Email" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @required = "reqiured", @placeholder = "Password" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.Username)
                                @Html.PasswordFor(model => model.Username, new { @class = "form-control", @required = "reqiured", @placeholder = "Confirm password" })
                            </div>
                            <p>
                                <input type="submit" value="Register" class="btn btn-primary btn-block" />
                            </p>
                        </fieldset>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
