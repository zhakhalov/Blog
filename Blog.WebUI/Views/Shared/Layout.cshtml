@{
    Layout = null;
    string title = ViewBag.Title ?? "Blog";
}

<head>
    <title name=""></title>
    <link href="~/bower_components/font-awesome/css/font-awesome.css" rel="stylesheet" type="text/css" />
    <link href="~/bower_components/bootstrap/dist/css/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/bower_components/bootstrap/dist/css/bootstrap-theme.css" rel="stylesheet" type="text/css" />
    <script src="~/bower_components/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
</head>

<header>
    <div class="navbar navbar-default">
        <div class="navbar-header">
            <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="#">Sitename</a>
        </div>
        <div class="navbar-collapse collapse" id="navbar-main">
            <div class="col-md-3 col-lg-3">
                <form class="navbar-form" role="search">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search" name="q">
                    </div>
                </form>
            </div>
            @if (!HttpContext.Current.User.Identity.IsAuthenticated)
            {
                @Html.Partial("Bar/Login");
            }
            else
            {
                @Html.Partial("Bar/User");
            }
        </div>
    </div>
</header>

@RenderSection("LeftSide")

@RenderBody()

<footer>
    This is footer
</footer>
