@{
    Layout = null;
    Blog.Repository.Models.UserModel user = ViewBag.User;
}

<head>
    <title>@(ViewBag.Title ?? "Blog")</title>
    <link href="~/bower_components/bootstrap/dist/css/paper.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Styles/styles.css" rel="stylesheet" type="text/css" />
    <script src="~/bower_components/jquery/dist/jquery.js" type="text/javascript"></script>
    <script src="~/bower_components/bootstrap/dist/js/bootstrap.js" type="text/javascript"></script>
    @RenderSection("Header", false)
</head>

<body>
    <div id="wrap">
        <header>
            <div class="navbar navbar-default">
                <div class="container">
                    <div class="navbar-header">
                        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="@Url.Action("Index", "Article")">Blog</a>
                    </div>
                    <ul class="nav navbar-nav">
                        <li><a href="@Url.Action("Index", "Article")">Home</a></li>
                    </ul>
                    <div class="navbar-collapse collapse" id="navbar-main">
                        @Html.Partial("Partial/Search")
                        @{Html.RenderAction("NavBar", "User");}
                    </div>
                </div>
            </div>
        </header>
        <div class="container">
            <div class="row">
                <article class="main col-md-9">
                    @RenderBody()
                </article>
                <aside class="sidebar col-md-3">
                    @{Html.RenderAction("Index", "Aside");}
                </aside>
            </div>
        </div>
    </div>
    <footer class="panel-footer">
        <div class="container">
            <div class=" pull-right">
                <p>Copyright © 2015 _monolith.
                <p>All rights reserved.
            </div>
        </div>
    </footer>
</body>