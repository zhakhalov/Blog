@{
    Layout = "~/Views/Shared/Layout.cshtml";
    string avatarUrl = ViewBag.AvatarUrl;
    Blog.Repository.Models.UserModel user = ViewBag.User;
}
<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h3 class="panel-title">About author</h3>
    </div>
    <div class="well">
        <div class="panel-body row">
            <div class="col-md-2 text-center">
                <img src="@Url.Content(avatarUrl)" width="100" height="100" />
            </div>
            <div class="col-md-10">
                @user.Summary
            </div>
        </div>
    </div>
</div>
<div class="panel panel-default">
    <div class="panel-heading text-center">
        <h3 class="panel-title">Articles</h3>
    </div>
    <div class="panel-body">
        @{Html.RenderAction("Author", "Article", new { author = user.Username });}
    </div>
</div>