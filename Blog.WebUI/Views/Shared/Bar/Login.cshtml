@model Blog.WebUI.Models.LoginModel

<form class="navbar-form navbar-right" method="post" action="@Url.Action("Login", "AuthController")">
    <div class="form-group">
        @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Login" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
    </div>
    <button type="submit" class="btn btn-default btn-success">Sign In</button>
    <a class="btn btn-default" href="Auth/Register">Sign Up</a>
</form>