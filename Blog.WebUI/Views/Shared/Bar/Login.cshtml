@model Blog.Repository.Models.UserModel

<form class="navbar-form navbar-right" method="post" action="@Url.Action("Login", "Auth")">
    <input type="text" name="ReturnUrl" hidden value="@HttpContext.Current.Request.Url" />
    <div class="form-group">
        @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Login" })
    </div>
    <div class="form-group">
        @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Password" })
    </div>
    <button type="submit" class="btn btn-default btn-success">Sign In</button>
    <a class="btn btn-default" href="@Url.Action("Register", "Auth")">Sign Up</a>
</form>