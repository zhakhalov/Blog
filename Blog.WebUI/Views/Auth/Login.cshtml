@model Blog.WebUI.Models.LoginModel

@{
    Layout = "~/Views/Shared/AuthLayout.cshtml";
    ViewBag.Title = "Blog Register";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
            <div class="login-panel panel panel-default">
                <div class="panel-heading text-center">
                    <h3 class="panel-title">Register</h3>
                </div>
                <div class="panel-body">
                    <form method="post">
                        <fieldset>
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.Login)
                                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", @required = "reqiured", @placeholder = "Username" })
                            </div>
                            <div class="form-group">
                                @Html.ValidationMessageFor(model => model.Password)
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control", @required = "reqiured", @placeholder = "Password" })
                            </div>
                            <p>
                                <input type="submit" value="Sign In" class="btn btn-primary btn-block" />
                                <a href="@Url.Action("Register", "AuthCntroller")" class="btn btn-link">Create account</a>
                            </p>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


